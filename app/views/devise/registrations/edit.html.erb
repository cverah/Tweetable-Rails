<div class="section-xs">
  <div class="container-lg", style="background-color: white">
    <h2>Edit Profile <%= resource_name.to_s.humanize %></h2>
   
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <strong class="text-1rem"><%= f.label :username %></strong><br />
          <%= f.text_field :username, autofocus: true, class:"input input__container" %>
        </div>

        <div class="field mb-4">
          <strong><%= f.label :email %></strong><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input input__container" %>
        </div>

        <div class="field mb-4">
          <strong><%= f.label :name %></strong><br />
          <%= f.text_field :name, autofocus: true, class:"input input__container" %>
        </div>

        <% if resource.avatar.attached? %>
          <%= image_tag resource.avatar, alt:"avatar-img", class:"avatar-img" %>
        <% end %>

        <div class="field mb-4">
          <strong><%= f.label :avatar %></strong><br />
          <%= f.file_field :avatar, autofocus: true, class:"input input__container" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-4">
          <strong><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></strong><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"input input__container" %>
          <% if @minimum_password_length %>
            <br />
            <strong><em><%= @minimum_password_length %> characters minimum</em></strong>
          <% end %>
        </div>

        <div class="field mb-4">
          <strong><%= f.label :password_confirmation %></strong><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input input__container" %>
        </div>

        <div class="field mb-4">
          <strong><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i></strong><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:"input input__container" %>
        </div>

        <div class="actions mb-4">
          <%= f.submit "Update", class:"button button--primary button--lg" %>
        </div>
      <% end %>
      <div class="mb-4">
        <%= link_to "Back", :back, class:"button button--secondary button--lg" %>
      </div>
  </div>
</div>
